{% extends "layout.jinja2" %}

{# Start Breadcrumb #}
{% block breadcrumb %}
    <div id="breadcrumb">

        <div class="container w-100 mw-100 pl-3 pr-3">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a class="hover" href="{{ url_for('index_module.index') }}"
                                                           data-i18n="anlihouse-anlihouse"></a>
                            </li>
                            <li class="breadcrumb-item"><a class="hover" href="{{ url_for('index_module.index') }}"
                                                           data-i18n="anlihouse-anlibreeders"></a></li>
                            <li class="breadcrumb-item active" aria-current="page" data-i18n="anlihouse-A403"></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
{# End Breadcrumb #}

{# Start Content #}
{% block content %}
    <div id="notifications" class="container notifications">
        <div class="row">
            <div class="col-12">

                <div class="card">

                    <div class="card-header">
                        <span data-i18n="anlihouse-A403"></span>
                    </div>

                    <div class="card-body">

                        <ol class="list-group mb-3">
                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold subheading" data-i18n="anlihouse-A388"></div>
                                    <span class="notifications-i18n-email"
                                          data-email="{{ is_user_login['user']['email'] }}"></span>
                                </div>
                                <a class="btn btn-primary" href="{{ url_for('security_module.security') }}"
                                   role="button" data-i18n="anlihouse-A387" style="display:inline-table"></a>
                            </li>
                        </ol>

                        <ol class="list-group list-group-numbered">

                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold subheading" data-i18n="anlihouse-A390"></div>
                                    <span data-i18n="anlihouse-A391"></span>
                                </div>
                                <div class="form-check form-switch"><input class="form-check-input" type="checkbox"
                                                                           data-switch="notifications"
                                                                           role="switch" id="notifications_01"
                                                                           {% if is_user_login['user_notification_settings']['notifications_01'] == True %}checked{% else %}{% endif %}><label
                                        class="form-check-label" for="notifications_01"></label></div>
                            </li>

                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold subheading" data-i18n="anlihouse-A392"></div>
                                    <span data-i18n="anlihouse-A393"></span>
                                </div>
                                <div class="form-check form-switch"><input class="form-check-input" type="checkbox"
                                                                           data-switch="notifications"
                                                                           role="switch" id="notifications_02"
                                                                           {% if is_user_login['user_notification_settings']['notifications_02'] == True %}checked{% else %}{% endif %}><label
                                        class="form-check-label" for="notifications_02"></label></div>
                            </li>

                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold subheading" data-i18n="anlihouse-A394"></div>
                                    <span data-i18n="anlihouse-A395"></span>
                                </div>
                                <div class="form-check form-switch"><input class="form-check-input" type="checkbox"
                                                                           data-switch="notifications"
                                                                           role="switch" id="notifications_03"
                                                                           {% if is_user_login['user_notification_settings']['notifications_03'] == True %}checked{% else %}{% endif %}><label
                                        class="form-check-label" for="notifications_03"></label></div>
                            </li>

                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold subheading" data-i18n="anlihouse-A396"></div>
                                    <span data-i18n="anlihouse-A397"></span>
                                </div>
                                <div class="form-check form-switch"><input class="form-check-input" type="checkbox"
                                                                           data-switch="notifications"
                                                                           role="switch" id="notifications_04"
                                                                           {% if is_user_login['user_notification_settings']['notifications_04'] == True %}checked{% else %}{% endif %}><label
                                        class="form-check-label" for="notifications_04"></label></div>
                            </li>

                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold subheading" data-i18n="anlihouse-A398"></div>
                                    <span data-i18n="anlihouse-A399"></span>
                                </div>
                                <div class="form-check form-switch"><input class="form-check-input" type="checkbox"
                                                                           data-switch="notifications"
                                                                           role="switch" id="notifications_05"
                                                                           {% if is_user_login['user_notification_settings']['notifications_05'] == True %}checked{% else %}{% endif %}><label
                                        class="form-check-label" for="notifications_05"></label></div>
                            </li>

                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold subheading" data-i18n="anlihouse-A400"></div>
                                    <span data-i18n="anlihouse-A401"></span>
                                </div>
                                <div class="form-check form-switch"><input class="form-check-input" type="checkbox"
                                                                           data-switch="notifications"
                                                                           role="switch" id="notifications_06"
                                                                           {% if is_user_login['user_notification_settings']['notifications_06'] == True %}checked{% else %}{% endif %}><label
                                        class="form-check-label" for="notifications_06"></label></div>
                            </li>

                        </ol>

                    </div>

                    <div class="card-footer text-end" data-i18n="anlihouse-anlibreeders"></div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}
{# End Content #}